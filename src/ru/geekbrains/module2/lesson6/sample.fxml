<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="ru.geekbrains.module2.lesson6.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" minWidth="100" minHeight="150">
    <TextArea fx:id="chatTextArea"  VBox.vgrow="ALWAYS" editable="false"></TextArea>
    <HBox minHeight="20" minWidth="100" alignment="BOTTOM_RIGHT">
        <TextField fx:id="chatTextField" HBox.hgrow="ALWAYS" ></TextField>
        <Button defaultButton="true" onAction="#sendMessage" alignment="BASELINE_RIGHT" minWidth="50">Send</Button>
    </HBox>
</VBox>